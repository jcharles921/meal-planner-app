@page
@model MealPlanner.Pages.MealSelection.ShoppingListModel

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title text-center">Shopping List</h2>
            <ul class="list-group my-4">
                @foreach (var item in Model.ShoppingItems)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @item
                        <span class="badge bg-primary rounded-pill">✓</span>
                    </li>
                }
            </ul>
            <form method="post" asp-page-handler="Export" class="text-center">
                <button class="btn btn-success" type="submit">Export to Text</button>
            </form>
        </div>
    </div>
</div>
